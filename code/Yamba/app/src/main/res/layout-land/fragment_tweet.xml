<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:orientation="vertical"
tools:context="com.twitter.university.android.yamba.PlaceholderFragment">

<!-- TWEET, big, bold, centered -->
<TextView
    android:text="TWEET"
    android:textSize="44sp"
    android:textStyle="bold"
    android:layout_gravity="left"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:textColor="@color/twitter_blue" />

<!-- 140 right aligned, small -->
<TextView
    android:text="250"
    android:layout_gravity="left"
    android:layout_width="250dp"
    android:layout_height="wrap_content" />

<!-- edit text -->
<EditText
    android:inputType="textMultiLine"
    android:layout_gravity="right"
    android:drawableBottom="@color/black"
    android:drawableTop="@color/black"
    android:drawableLeft="@color/black"
    android:drawableRight="@color/black"
    android:textColor="@color/red"
    android:textStyle="bold"
    android:textSize="20sp"
    android:height="150dp"
    android:width="350dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<!-- Submit button, medium, bold, centered -->
<Button
    android:text="@string/submit"
    android:layout_gravity="left"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<!--
<TextView
    android:text="@string/hello_world"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
-->

</LinearLayout>

